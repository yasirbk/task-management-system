    "module": "commonjs",                   
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "./",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": ["/**/*"],
}